<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_auth"
    app:startDestination="@id/logInFragment">
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.todoapp.ui.fragment.auth.singup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/navigate_signUpFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.todoapp.ui.fragment.auth.login.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/navigate_logInFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/navigate_logInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.todoapp.ui.activity.MainActivity"
        android:label="MainActivity" />
</navigation>